<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ogapants.playercontrolview.sample">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MusicActivity" />
        <activity android:name=".VideoViewActivity" />
        <activity android:name=".CustomizedActivity" />
        <activity android:name=".ExoPlayerActivity" />
        <activity android:name=".legacy.McMusicActivity" />
        <activity android:name=".legacy.McVideoViewActivity" />
        <activity android:name=".legacy.McExoPlayerActivity" />
    </application>

</manifest>